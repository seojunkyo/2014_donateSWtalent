<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:orientation="vertical" >

    <RelativeLayout
        a:id="@+id/tabBar"
        a:layout_width="fill_parent"
        a:layout_height="51dp"
        a:background="@drawable/actionbar"
        a:orientation="horizontal" >

        <ImageButton
            a:id="@+id/BtnSlide"
            a:layout_width="30dp"
            a:layout_height="30dp"
            a:layout_centerHorizontal="false"
            a:layout_centerVertical="true"
            a:layout_marginLeft="15dp"
            a:padding="4dp"
            a:layout_gravity="center"
            a:background="@drawable/slide_button"
            a:text="" />

        <ImageButton
            a:id="@+id/BtnProfile"
            a:layout_width="30dp"
            a:layout_height="30dp"
            a:layout_alignParentRight="true"
            a:layout_centerVertical="true"
            a:layout_marginRight="15dp"
            a:background="@drawable/profile_button"
            a:scaleType="fitXY" >
        </ImageButton>
    </RelativeLayout>

</LinearLayout>