<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/framelayout_mypatternView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/imgview_maskstencil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgview_mypattern"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="center"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/imgbtn_mypatternfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mypatternfinish"
            android:onClick="mOnClick"
            android:visibility="invisible" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:background="@drawable/stencilmenu_back" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/imgbtn_temppattern1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp1"
                        android:onClick="mOnClick" />

                    <ImageButton
                        android:id="@+id/imgbtn_temppattern2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp2"
                        android:onClick="mOnClick" />

                    <ImageButton
                        android:id="@+id/imgbtn_temppattern3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp3"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp4"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp5"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp6"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp7"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp8"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp9"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern10"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp10"
                        android:onClick="mOnClick" />
                    <ImageButton
                        android:id="@+id/imgbtn_temppattern11"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pattern_temp11"
                        android:onClick="mOnClick" />
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/imgbtn_mypattern"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/makepatternbtn"
                        android:onClick="mOnClick" />
                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/imgbtn_menu_temppattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_pattern"
                android:onClick="mOnClick" />

            <ImageButton
                android:id="@+id/imgbtn_menu_mypattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_mypattern"
                android:onClick="mOnClick" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>