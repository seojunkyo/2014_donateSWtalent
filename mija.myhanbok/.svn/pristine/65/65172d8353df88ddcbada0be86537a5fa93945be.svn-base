<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tpagervidieo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/intro_back"
    android:orientation="vertical"
    android:padding="1dp" >

    <RelativeLayout
        android:id="@+id/firstVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/intro_video_image" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/intro_video_image2" >
    </RelativeLayout>

</LinearLayout>